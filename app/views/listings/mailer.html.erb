<h2>Send Invitation to Apply</h2>
<%= form_tag url_for(:action => 'invite') do %>
<p><label_tag="email_subject">Subject</label>
<%= text_field 'email', 'subject' %></p>
<p><label_tag="email_recipient">Recipient</label>
<%= text_field 'email', 'recipient' %></p>
<p><label_tag="email_message">Message</label>
<%= text_field 'email', 'message' %></p>
<%= submit_tag "Invite" %>
<% end %>